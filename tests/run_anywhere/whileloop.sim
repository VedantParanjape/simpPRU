int a := 1;
while: a < 10 {
    print(a);
    a := a + 1;
}
println("");
print("Now a is ");
println(a);

while: true {
    if : a == 1 {
        break;
    }
    print(a);
    a := a - 1;
}
println("");
print("Now a is ");
println(a);

while: true {
    if : a == 10 {
        a := a + 1;
        println("");
        println("Calling continue");
        continue;
    }
    elif : a == 20 {
        println("");
        println("Calling break");
        break;
    }
    print(a);
    a := a + 1;
}
print("Now a is ");
println(a);

while: true {
    println("runs only once");
    break;
}
